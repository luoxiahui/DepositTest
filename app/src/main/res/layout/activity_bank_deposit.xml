<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context="com.toos.lxh.deposittest.BankDepositActivity">
    <ScrollView
        android:background="@color/bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_color"
        >
        <!-- 存管银行-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_deposit_bank"
                android:layout_alignBottom="@+id/tv_deposit_bank"
                android:layout_alignParentStart="true"
                android:text="@string/deposit_bank"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/sh_bank"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/sh_bank"
                android:id="@+id/tv_deposit_bank"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dibu"
            />


        <!-- 存管账户-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            >

            <TextView
                android:id="@+id/tv_deposit_account"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_account"
                android:layout_alignBottom="@+id/tv_account"
                android:layout_alignParentStart="true"
                android:text="@string/deposit_account"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="564561225555"
                android:id="@+id/tv_account"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dibu"
            />


        <!-- 开户行-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            >

            <TextView
                android:id="@+id/tv_opening_bank"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_opening"
                android:layout_alignBottom="@+id/tv_opening"
                android:layout_alignParentStart="true"
                android:text="@string/opening_bank"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="广东省深圳市工商银行"
                android:id="@+id/tv_opening"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dibu"
            />


        <!-- 个人信息-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"

            >
            <TextView
                android:id="@+id/bg_xian"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dibu"
                />

            <TextView
                android:layout_below="@+id/bg_xian"
                android:id="@+id/tv_personal_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/personal_information"
                android:drawablePadding="10dp"
                android:paddingLeft="15dp"
                android:layout_alignParentStart="true"
                android:text="@string/personal_information"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dibu"
            />


        <!-- 客户姓名-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_customer_name"
                android:layout_alignBottom="@+id/tv_customer_name"
                android:layout_alignParentStart="true"
                android:text="@string/customer_name"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="张明明"
                android:id="@+id/tv_customer_name"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dibu"
            />


        <!-- 证件类型-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_certificate_type"
                android:layout_alignBottom="@+id/tv_certificate_type"
                android:layout_alignParentStart="true"
                android:text="@string/certificate_type"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/identity_card"
                android:id="@+id/tv_certificate_type"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dibu"
            />


        <!-- 证件号码-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_id_number"
                android:layout_alignBottom="@+id/tv_id_number"
                android:layout_alignParentStart="true"
                android:text="@string/id_number"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/identity_card"
                android:id="@+id/tv_id_number"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dibu"
            />


        <!-- 绑定主账号信息-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"

            >
            <TextView
                android:id="@+id/bg_xian1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/dibu"
                />

            <TextView
                android:layout_below="@+id/bg_xian1"
                android:id="@+id/tv_band_main_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/band_main_account"
                android:drawablePadding="10dp"
                android:paddingLeft="15dp"
                android:layout_alignParentStart="true"
                android:text="@string/band_main_account"
                android:layout_marginTop="10dp"
                android:textSize="14sp" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dibu"
            />


        <!-- 银行卡号-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_credit_card_numbers"
                android:layout_alignBottom="@+id/tv_credit_card_numbers"
                android:layout_alignParentStart="true"
                android:text="@string/credit_card_numbers"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_credit_card_numbers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="555448515454545" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dibu"
            />


        <!-- 开户行-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_opening_bank2"
                android:layout_alignBottom="@+id/tv_opening_bank2"
                android:layout_alignParentStart="true"
                android:text="@string/opening_bank"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="深圳市罗湖支行"
                android:id="@+id/tv_opening_bank2"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dibu"
            />

        <!-- 银行预留手机号-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            >

            <TextView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_reserved_phone"
                android:layout_alignBottom="@+id/tv_reserved_phone"
                android:layout_alignParentStart="true"
                android:text="@string/reserved_phone"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="1551515000"
                android:id="@+id/tv_reserved_phone"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/dibu"
            />
    </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
